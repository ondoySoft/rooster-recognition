# Production Configuration for Rooster Recognition System

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=123456789
FLASK_DEBUG=False

# Database Configuration
# For MySQL (recommended for production)
DATABASE_URL=mysql+pymysql://username:password@localhost:3306/rooster_db

# For SQLite (simpler deployment)
# DATABASE_URL=sqlite:///rooster_db.db

# File Upload Configuration
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216  # 16MB limit
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,bmp,webp

# AI Model Configuration
MODEL_CACHE_SIZE=100
PREDICTION_TIMEOUT=30

# Security Configuration
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600  # 1 hour

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Performance Configuration
SQLALCHEMY_ENGINE_OPTIONS={"pool_pre_ping": True, "pool_recycle": 300}
SQLALCHEMY_TRACK_MODIFICATIONS=False

# CORS Configuration (if needed)
CORS_ORIGINS=*

# Email Configuration (for notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/0

# Monitoring
SENTRY_DSN=your-sentry-dsn-here
